<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.healthStore.product.dao.ProductDAO">
    <insert id="insertProduct" parameterType="map">
       INSERT INTO `product`
       (
           `id`           
           ,`productName`
           ,`price`
           ,`part`
           ,`imagePath`
           ,`createdAt`
           ,`updatedAt`       
       )
       VALUES
       (           
           #{productName}
           ,#{price}
           ,#{part}
           ,#{imagePath}
           ,NOW()
           ,NOW()
       )
    </insert>
     <select id="selectgetProductList" resultType="com.healthStore.product.model.Product">
       SELECT
            `id`           
           ,`productName`
           ,`price`
           ,`part`
           ,`imagePath`
           ,`createdAt`
           ,`updatedAt` 
      FROM
          `product`
      
      
              
    </select>
    
    <select id="selectDetail" parameterType="int" resultType="com.healthStore.product.model.Product">
      SELECT
          `id`
           ,`productName`
           ,`price`
           ,`part`
           ,`imagePath`
           ,`createdAt`
           ,`updatedAt`  
      FROM
         `product`
      WHERE   
         `id` = #{id} 
        
    </select>
    
    <insert id="insertNewProduct" parameterType="map">
       INSERT INTO `product`
       (                                  
           `productName`
           ,`price`
           ,`part`
           ,`imagePath`
           ,`createdAt`
           ,`updatedAt`         
       )
       VALUES
       (                    
           #{productName}
           ,#{price}
           ,#{part}
           ,#{imagePath}
           ,NOW()
           ,NOW()
       )
   </insert>
   
   <select id="selectNewProduct" parameterType="int" resultType="com.healthStore.product.model.Product">
      SELECT
           `id`
           ,`productName`
           ,`price`
           ,`part`
           ,`imagePath`
           ,`createdAt`
           ,`updatedAt`
      FROM
           `product`
      WHERE
           `id` = #{id}     
   </select>
    
    
 </mapper>